<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="~/css/Admin/layout.css" rel="stylesheet" />
    <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <title>
        Admin-Home
    </title>
</head>
<body>
    <div class="header">
        <img id="logo" src="~/image/logo5.png" width="80" alt="Logo description">
        <h3>WELCOME TO ADMIN PAGE</h3>
        <a href='@Url.Action("LogOut", "Home")'>
            <i class="fa fa-sign-out fa-2x" style="margin-left: 0; color: white; position: relative; top: 3px; }" aria-hidden="true"></i>
            <label id="label-out">Log out</label>
        </a>
        <br>
    </div>
    <div class="main">
        <div class="tab">
            
            <a class="tab-item" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a>
            <br>
            <a class="tab-item" asp-area="" asp-controller="Admin" asp-action="Account">Account</a>
            <br>
            <a class="tab-item" asp-area="" asp-controller="Admin" asp-action="Post">Post</a>
            <br>
            <a class="tab-item" asp-area="" asp-controller="Admin" asp-action="Place">Place</a>
        </div>

        <main id="main">
            @RenderBody();
        </main>
    </div>
    <footer>
        <p>Designed by Viet & Tien @@ </p>
    </footer>
</body>

</html>