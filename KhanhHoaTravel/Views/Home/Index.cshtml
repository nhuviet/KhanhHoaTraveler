    <!--==================== HOME ====================-->
    <section class="home" id="home">
        <img src="~/image/home1.jpg" alt="" class="home__img">

        <div class="home__container container grid">
            <div class="home__data">
                <h1 class="home__data-title">Nha Trang <br><b>Biển hẹn</b></h1>
                <span class="home__data-subtitle">Chạm đến trái tim</span>
                <a href="#" class="button">Khám phá ngay</a>

            </div>

            <div class="home__social">
                <a href="https://www.facebook.com/" target="_blank" class="home__social-link">
                    <i class="ri-facebook-box-fill"></i>
                </a>
                <a href="https://www.instagram.com/" target="_blank" class="home__social-link">
                    <i class="ri-instagram-fill"></i>
                </a>
                <a href="https://twitter.com/" target="_blank" class="home__social-link">
                    <i class="ri-twitter-fill"></i>
                </a>
            </div>

            <div class="home__info">
                <div>
                    <span class="home__info-title">Các địa điểm nổi tiếng</span>
                    <a asp-area="" asp-controller="Service" asp-action="Index" class="button button--flex button--link home__info-button">
                        Xem thêm <i class="ri-arrow-right-line"></i>
                    </a>
                </div>

                <div class="home__info-overlay">
                    <img src="~/image/home7.jpg" alt="" class="home__info-img">
                </div>
            </div>
        </div>
    </section>

    <!--==================== ABOUT ====================-->
    <section class="about section" id="about">
        <div class="about__container container grid">
            <div class="about__data">
                <h3 class="section__title about__title">Resort </h3>
                <p class="about__description">
                    Những khu resort nổi tiếng với cảnh sắc đẹp đẽ và yên bình.
                    Giúp bạn giải tỏa căng thẳng sau những ngày làm việc mệt mỏi.
                </p>
                <a href="#" class="button">Đặt trước</a>
            </div>

            <div class="about__img">
                <div class="about__img-overlay">
                    <img src="~/image/resort0.jpg" alt="" class="about__img-one">
                </div>

                <div class="about__img-overlay">
                    <img src="~/image/resort1.jpg" alt="" class="about__img-two">
                </div>
            </div>
        </div>
    </section>

