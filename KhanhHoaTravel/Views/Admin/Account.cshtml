@{
    Layout = "_adminLayout";
}
<link href="~/css/Admin/table.css" rel="stylesheet" />

<div class="wrapper">
    <div class="table">
        <div class="row header">
            <div class="cell">
                ID
            </div>
            <div class="cell">
                Name
            </div>
            <div class="cell">
                Date create
            </div>
            <div class="cell">
                Roles
            </div>
            <div class="cell">
                Status
            </div>
            <div class="cell"></div>
        </div>
        <!-- Table Data -->
        @{
            List<_User> users = new List<_User>();
            users = ViewBag.userList;
            foreach (var u in users)
            {
                <div class="row">
                    <div class="cell" data-title="ID">@u.Id</div>
                    <div class="cell" data-title="Name">@u.FullName</div>
                    <div class="cell" data-title="Date Create">@u.DateCreate</div>
                    <div class="cell" data-title="Role">@u.Role</div>
                    @if (u.Status == 1)
                    {
                        <div class="cell active" data-title="Status">Active</div>
                    }
                    @if (u.Status == 0)
                    {
                        <div class="cell disabled" data-title="Status">Disable</div>
                    }
                <div class="btn">
                    <a href="@Url.Action("AccountDetail", "Admin", new { id = u.Id })">
                        <button id="detail" type="button">Detail</button>
                    </a>
                    @*<button id="edit" type="button" onclick="alert('Button was clicked')">Edit</button>*@
                    @if (u.Status == 1)
                    {
                        <a href="@Url.Action("ChangeStatusUser", "Admin", new { id = u.Id, status = u.Status })">
                            <button id="delete" type="button">Disable</button>
                        </a>
                    }@if (u.Status == 0)
                    {
                        <a href="@Url.Action("ChangeStatusUser", "Admin", new { id = u.Id, status = u.Status })">
                            <button id="active" type="button">Active</button>
                        </a>
                    }

                </div>
                </div>
            }

        }


    </div>
</div>